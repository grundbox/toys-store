mixin prev-1()

	.product-prev
		.product-prev__header
			.js-product-prev__slider
				.product-prev__img-wrapper(data-color="#f5a623")
					a(class='product-prev__img-wrapper' href='product.html')
						img(src="img/prev-1.1.jpg" alt="Изображение товара").product-prev__img
				.product-prev__img-wrapper(data-color="#000000")
					a(class='product-prev__img-wrapper' href='product.html')
						img(src="img/prev-1.2.jpg" alt="Изображение товара").product-prev__img
				.product-prev__img-wrapper(data-color="#ffffff")
					a(class='product-prev__img-wrapper' href='product.html')
						img(src="img/prev-1.3.jpg" alt="Изображение товара").product-prev__img
		.product-prev__body
			.product-prev__info
				a(href='product.html' class='product-prev__title') Беговел Puky Pukylino
				span.product-prev__country Германия
			.product-prev__price
				span.product-prev__price-current 3 990 грн.
				span.product-prev__price-old 4 500 грн.
			.product-prev__colors
		.product-prev__footer
			button.btn В корзину