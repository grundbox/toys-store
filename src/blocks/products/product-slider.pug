include ../small-blocks/icon

mixin product-slider()

	.product-slider
		.product-slider-dots
			.product-slider-dots__btn.product-slider-dots__btn--prev
				+icon('chevron-up','product-slider-dots__btn-icon')
			.js-product-slider-dots
				.product-slider-dots__item
					img(src='img/prev-1.1.jpg' alt='Превью картинки продукта').product-slider-dots__img
				.product-slider-dots__item
					img(src='img/prev-1.2.jpg' alt='Превью картинки продукта').product-slider-dots__img
				.product-slider-dots__item
					img(src='img/prev-1.3.jpg' alt='Превью картинки продукта').product-slider-dots__img
				.product-slider-dots__item
					img(src='img/prev-1.1.jpg' alt='Превью картинки продукта').product-slider-dots__img
				.product-slider-dots__item
					img(src='img/prev-1.2.jpg' alt='Превью картинки продукта').product-slider-dots__img
			.product-slider-dots__btn.product-slider-dots__btn--next
				+icon('chevron-down','product-slider-dots__btn-icon')
		.js-product-slider
			.product-slider__img-wrapper
				a(class='product-slider__link' href='img/prev-1.1.jpg')
					img(src='img/prev-1.1.jpg' alt='Картинка продукта').product-slider__img
			.product-slider__img-wrapper
				a(class='product-slider__link' href='img/prev-1.2.jpg')
					img(src='img/prev-1.2.jpg' alt='Картинка продукта').product-slider__img
			.product-slider__img-wrapper
				a(class='product-slider__link' href='img/prev-1.3.jpg')
					img(src='img/prev-1.3.jpg' alt='Картинка продукта').product-slider__img
			.product-slider__img-wrapper
				a(class='product-slider__link' href='img/prev-1.1.jpg')
					img(src='img/prev-1.1.jpg' alt='Картинка продукта').product-slider__img
			.product-slider__img-wrapper
				a(class='product-slider__link' href='img/prev-1.2.jpg')
					img(src='img/prev-1.2.jpg' alt='Картинка продукта').product-slider__img