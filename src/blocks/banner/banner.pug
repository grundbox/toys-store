include ../small-blocks/icon

mixin banner()

	section.s-banner
		.container
			.banner
				.banner__navigation.banner__navigation--prev
					+icon('chevron-left', 'banner__navigation-icon')
				.banner__navigation.banner__navigation--next
					+icon('chevron-right', 'banner__navigation-icon')
				.banner__dots
				.js-banner
					.banner__item
						.banner__content
							.banner__body
								span.banner__title Беговелы
								span.banner__descr Отличный подарок для детей от 1 года
								a(href='category.html').btn.btn--transparent-white.btn--round.btn--inline Выбрать
							.banner__img-wrapper
								img(src='img/banner-img-1.png' alt='Картинка на баннере').banner__img
					.banner__item
						.banner__content
							.banner__body
								span.banner__title Беговелы
								span.banner__descr Мечта - даже педали крутить не нужно
								a(href='category.html').btn.btn--transparent-white.btn--round.btn--inline Выбрать
							.banner__img-wrapper
								img(src='img/banner-img-2.png' alt='Картинка на баннере').banner__img
					.banner__item
						.banner__content
							.banner__body
								span.banner__title Беговелы
								span.banner__descr Отличный подарок для детей от 1 года
								a(href='category.html').btn.btn--transparent-white.btn--round.btn--inline.banner__btn Выбрать
							.banner__img-wrapper
								img(src='img/banner-img-3.png' alt='Картинка на баннере').banner__img